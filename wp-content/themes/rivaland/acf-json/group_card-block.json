{
    "key": "group_card_block",
    "title": "Card Block",
    "fields": [
        {
            "key": "field_card_type",
            "label": "Card Type",
            "name": "card_type",
            "type": "select",
            "instructions": "Choose the card type which determines layout and styling",
            "required": 1,
            "choices": {
                "project": "Project (Map image, meta, location)",
                "news": "News (Image, title, text, link)",
                "service": "Service (Image, eyebrow, title, text)",
                "feature": "Feature (Image, eyebrow, title, text)",
                "default": "Default (Generic card)"
            },
            "default_value": "default",
            "allow_null": 0,
            "multiple": 0,
            "ui": 1,
            "ajax": 0,
            "return_format": "value"
        },
        {
            "key": "field_card_variant",
            "label": "Color Variant",
            "name": "card_variant",
            "type": "select",
            "instructions": "Choose the color scheme variant",
            "required": 0,
            "choices": {
                "light": "Light (Default)",
                "dark": "Dark"
            },
            "default_value": "light",
            "allow_null": 0,
            "multiple": 0,
            "ui": 1,
            "ajax": 0,
            "return_format": "value"
        },
        {
            "key": "field_card_image",
            "label": "Card Image",
            "name": "card_image",
            "type": "image",
            "instructions": "Main image for the card",
            "required": 0,
            "return_format": "array",
            "preview_size": "medium",
            "library": "all",
            "min_width": "",
            "min_height": "",
            "min_size": "",
            "max_width": "",
            "max_height": "",
            "max_size": "",
            "mime_types": ""
        },
        {
            "key": "field_card_eyebrow",
            "label": "Eyebrow",
            "name": "card_eyebrow",
            "type": "group",
            "instructions": "Optional label/category text above the title",
            "required": 0,
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "!=",
                        "value": "project"
                    }
                ]
            ],
            "layout": "block",
            "sub_fields": [
                {
                    "key": "field_card_eyebrow_text",
                    "label": "Eyebrow Text",
                    "name": "text",
                    "type": "text",
                    "instructions": "",
                    "required": 0,
                    "default_value": "",
                    "placeholder": "Category or label"
                },
                {
                    "key": "field_card_eyebrow_variant",
                    "label": "Eyebrow Variant",
                    "name": "variant",
                    "type": "select",
                    "instructions": "",
                    "required": 0,
                    "choices": {
                        "primary": "Primary (Teal color)",
                        "secondary": "Secondary",
                        "light": "Light",
                        "dark": "Dark"
                    },
                    "default_value": "primary",
                    "allow_null": 0,
                    "multiple": 0,
                    "ui": 1,
                    "ajax": 0,
                    "return_format": "value"
                }
            ]
        },
        {
            "key": "field_card_title",
            "label": "Card Title",
            "name": "card_title",
            "type": "text",
            "instructions": "Main title for the card",
            "required": 1,
            "placeholder": "Card title"
        },
        {
            "key": "field_card_text",
            "label": "Card Description",
            "name": "card_text",
            "type": "textarea",
            "instructions": "Description or excerpt text",
            "required": 0,
            "rows": 4,
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "!=",
                        "value": "project"
                    }
                ]
            ],
            "placeholder": "Card description..."
        },
        {
            "key": "field_card_meta",
            "label": "Meta Information",
            "name": "card_meta",
            "type": "text",
            "instructions": "Meta text (e.g., 'Residential / Application submitted')",
            "required": 0,
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "==",
                        "value": "project"
                    }
                ]
            ],
            "placeholder": "Residential / Application submitted"
        },
        {
            "key": "field_card_status",
            "label": "Status",
            "name": "card_status",
            "type": "text",
            "instructions": "Status text (displayed within meta)",
            "required": 0,
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "==",
                        "value": "project"
                    }
                ]
            ],
            "placeholder": "Application submitted"
        },
        {
            "key": "field_card_location",
            "label": "Location",
            "name": "card_location",
            "type": "textarea",
            "instructions": "Location text (supports line breaks)",
            "required": 0,
            "rows": 2,
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "==",
                        "value": "project"
                    }
                ]
            ],
            "placeholder": "Woodcote, South Oxfordshire"
        },
        {
            "key": "field_card_link",
            "label": "Link",
            "name": "card_link",
            "type": "group",
            "instructions": "Optional link for the card",
            "required": 0,
            "layout": "block",
            "sub_fields": [
                {
                    "key": "field_card_link_url",
                    "label": "Link URL",
                    "name": "url",
                    "type": "url",
                    "instructions": "",
                    "required": 0,
                    "default_value": ""
                },
                {
                    "key": "field_card_link_text",
                    "label": "Link Text",
                    "name": "text",
                    "type": "text",
                    "instructions": "",
                    "required": 0,
                    "default_value": "Read more",
                    "placeholder": "Read more"
                }
            ],
            "conditional_logic": [
                [
                    {
                        "field": "field_card_type",
                        "operator": "!=",
                        "value": "project"
                    }
                ]
            ]
        },
        {
            "key": "field_card_class",
            "label": "Additional CSS Classes",
            "name": "card_class",
            "type": "text",
            "instructions": "Add custom CSS classes (space-separated)",
            "required": 0,
            "placeholder": "custom-class another-class"
        }
    ],
    "location": [
        [
            {
                "param": "block",
                "operator": "==",
                "value": "acf/card-block"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "hide_on_screen": "",
    "active": true,
    "description": "Card component block with type and variant options",
    "show_in_rest": 0
}

